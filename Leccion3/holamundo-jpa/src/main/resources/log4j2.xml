<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO">
    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </console>
    </appenders>
    <Logger>
        <Root level="debug">
            <AppenderRef ref="Console" />
        </Root>
    </Logger>
</configuration>

    